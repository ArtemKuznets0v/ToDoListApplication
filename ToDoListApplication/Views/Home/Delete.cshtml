@model ToDoListModel

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete task</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All">*@

        @*</div>*@
        <div class="mb-3">
            <label asp-for="DateOfTask"></label>
            <input asp-for="DateOfTask" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="NameTask"></label>
            <input asp-for="NameTask" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>
</form>


